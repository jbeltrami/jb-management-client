<div class="container sign-up-screen">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign Up</h3>
                </div>
                <div class="panel-body">
                    <form id="sign-up">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" name="credentials[email]" type="email" required="true" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="credentials[password]" type="password" value="" required="true" autofocus>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password confirmation" name="credentials[password_confirmation]" type="password" value="" required="true" autofocus>
                            </div>
                            <!-- Change this to a button or input when using this as a form -->
                            <input class="btn btn-lg btn-success btn-block" type="submit" name="submit" value="Sign up!">
                        </fieldset> <br/>
                    </form>
                    <button class="btn btn-lg btn-success btn-block go-to-signin">Back to Sign-In</button>
                </div>
            </div>
            <h5 class="panel-primary" id="temp-message"></h5>
        </div>
    </div>
</div>
