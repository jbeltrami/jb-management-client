<div class="container login-screen">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <form id="sign-in">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="E-mail" name="credentials[email]" type="text" autofocus>
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="Password" name="credentials[password]" type="password" value="">
              </div>
              <!-- Change this to a button or input when using this as a form -->
              <input class="btn btn-lg btn-success btn-block" type="submit" name="submit" value="Sign in!">
            </fieldset> <br/>
          </form>
          <button class="btn btn-lg btn-success btn-block go-to-signup">Create an account</button>
        </div>
      </div>
    </div>
  </div>
</div>
