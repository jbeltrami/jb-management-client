<form id="update-service">
  <legend>Update service</legend>
  <input class='form-control serviceId' name="service[id]" type="text" placeholder="Service ID">
  <input class='form-control clientId' name="service[client_id]" type="text" placeholder="Change client - provide the ID">
  <textarea class="form-control" name="service[description]" type="text" placeholder="Service description" rows='7'></textarea>
  <input class='form-control' name="service[service_date]" type="date" placeholder="Date of the service">
  <input class='form-control' name="service[price]" type="number" step='0.10' placeholder="Service Price">
  <input class="btn btn-md btn-success btn-block" type="submit" name="submit" value="Update service!">
</form>
