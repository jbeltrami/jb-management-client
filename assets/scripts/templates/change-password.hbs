<div class="container login-screen">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Change your password</h3>
            <h5 class="panel-primary" id="temp-message"></h5>
        </div>
        <div class="panel-body">
          <form id="changepw">
            <fieldset>
              <div class="form-group">
                <input class="form-control" placeholder="old password" name="passwords[old]" type="password" autofocus>
              </div>
              <div class="form-group">
                <input class="form-control" placeholder="new password" name="passwords[new]" type="password" autofocus>
              </div>
              <!-- Change this to a button or input when using this as a form -->
              <input class="btn btn-lg btn-success btn-block" type="submit" name="submit" value="Change password">
            </fieldset> <br/>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
